{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "types": ["node", "jest"],
    "lib": ["ES2022"],
    "declaration": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
